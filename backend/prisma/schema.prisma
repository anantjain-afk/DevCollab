generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  username  String   @unique
  password  String // We will store the hashed password here
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relation Fields
  projects ProjectUser[] // A user can be a member of many projects
  tasks    Task[] // A user can have many tasks
  messages Message[]
}

model Project {
  id          String   @id @default(cuid())
  name        String
  description String? // The '?' makes this field optional
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relation Fields
  members ProjectUser[] // A project can have many members
  tasks   Task[] // A project can have many tasks
  messages Message[]
}

// Join table for many-to-many relationship between User and Project : 
model ProjectUser {
  userId     String
  projectId  String
  assignedAt DateTime @default(now())
  role       String   @default("MEMBER") // e.g., "ADMIN", "MEMBER"

  // Relations to the other models
  user    User    @relation(fields: [userId], references: [id])
  project Project @relation(fields: [projectId], references: [id])

  // Create a composite primary key
  @@id([userId, projectId])
}

model Task {
  id          String   @id @default(cuid())
  title       String
  description String?
  status      String   @default("TO_DO") // e.g., ""TO_DO", "IN_PROGRESS", "DONE"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // foreign keys for relations 
  projectId  String
  assigneeId String? // A task can be unassigned, hence the '?'

  // Relations field 
  project  Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  assignee User?   @relation(fields: [assigneeId], references: [id], onDelete: SetNull)

  // * `onDelete: Cascade` for the project means if you delete a project, all its tasks are automatically deleted.
  // * `onDelete: SetNull` for the user means if you delete a user, any tasks assigned to them will become unassigned (`assigneeId` is set to `null`).
}

model Message {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())

  // Relations
  projectId String
  userId    String

  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
