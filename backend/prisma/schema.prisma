generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  username  String   @unique
  password  String // We will store the hashed password here
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relation Fields
  projects  ProjectUser[] // A user can be a member of many projects
}

model Project {
  id          String   @id @default(cuid())
  name        String
  description String? // The '?' makes this field optional
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relation Fields
  members     ProjectUser[] // A project can have many members
}
// Join table for many-to-many relationship between User and Project : 
model ProjectUser {
  userId    String
  projectId String
  assignedAt DateTime @default(now())
  role       String   @default("MEMBER") // e.g., "ADMIN", "MEMBER"

  // Relations to the other models
  user      User     @relation(fields: [userId], references: [id])
  project   Project  @relation(fields: [projectId], references: [id])

  // Create a composite primary key
  @@id([userId, projectId])
}